<!doctype html>

<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Goal Patrol - Home</title>
    <link href="/css/bootstrap.css" rel="stylesheet">
    <link href="/css/bootstrap-theme.css" rel="stylesheet">
    <link href="css/GoalPatrol.css" rel="stylesheet">
    <script src="js/angular.1.2.26.min.js"></script>
    <script src="js/jquery-1.11.2.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/GoalPatrolScript.js"></script>
   <script > 
      var NAME = "Kenny";
      window.onload = function() {
        document.getElementById("demo").innerHTML = NAME; 
      }

      function doInspireMe() {
          var x;
          if (confirm("Today's inspiring message") == true) {
              x = "You pressed OK!";
          } else {
              x = "You pressed Cancel!";
          }
          //document.getElementById("demo").innerHTML = x;
      }

  </script>
    

  </head>

  <body>

    <!-- Header: Title & Name -->
  	<div class="header-container container">
      <a href="/"><h1 id="title">Goal Patrol</h1></a>

      <!-- Name & Settings Dropdown Menu -->
      <div class="dropdown" id="dropdown-icon">
        <h2 class="btn btn-default dropdown-toggle" 
            id="name-icon" data-toggle="dropdown">
            <a id="demo"></a>
            <span class="caret"></span>
        </h2>
        <ul class="dropdown-menu" role="menu" aria-labelledby="name-icon" id="name-menu">
          <li role="presentation">
            <a role="menuitem" tabindex="-1" href="/settings">Settings</a>
          </li>
          <li role="presentation" class="divider"></li>
          <li role="presentation">
            <a role="menuitem" tabindex="-1" href="/help">Help</a>
          </li>
          <li role="presentation" class="divider"></li>
          <li role="presentation">
            <a role="menuitem" tabindex="-1" href="/index">Logout</a>
          </li>                   
        </ul>        
      </div>

      <!-- Send Goal Button -->
      <div id="sendgoal-icon">
        <h2 class="btn btn-warning" type="button" onclick="window.location.href='sendgoal'">Send Goal</h2>
      </div> 
  	</div>

    <br> <!--Extra spacing-->

    <!-- Goal Requests -->
    <div class="goalrequest-container container ">
      <h3>New Goal Request!</h3>
      <p>From: Jenny<br>
         Goal: Go to the gym. 1 hours 5 times a week.<br>
         Complete Date: 02/15/2015
      </p>
      <button class="btn btn-block" onclick="window.location.href='goaldetails'"> Accept</button>
      <button class="btn btn-block AccRej">Decline</button>
    </div>


    <!-- Goals -->
    <div class="central-container container">
      <section ng-app="myApp" ng-controller="TabController as tab">
        
        <!-- GOAL HOME PAGE TAB1-->
        <div ng-show="tab.isSet(1)">
          <p>
            <h3>Your Goals</h3>

            <!-- Container for all goals -->
            <div class="goal-container container">
            
          {{#each Users}}

              <div class="Users">

              <img class="avatar-image" src={{Kenny.patrol1imgsrc}}>
                <p class="patrol-info"><b>Patrol:</b>
                  <a href ng-click="tab.setTab(2)">{{Kenny.patrol1}}</a>
                </p>
                <p class="bubble">{{Kenny.goal1}}</p>
                <!--<p class="bubble">{{Kenny.goal2}}</p>-->
                <button class="btn btn-lg btn-success alert" onclick="doInspireMe()" id="inspire1">Inspire Me</button>
                <button class="btn btn-lg btn-info alert" id="progress1" onclick="window.location.href='trackprogress'">Track Progress</button>
            </div>

            <div class="Users">

              <img class="avatar-image" src={{Kenny.patrol2imgsrc}}>
                <p class="patrol-info"><b>Patrol:</b>
                  <a href ng-click="tab.setTab(2)">{{Kenny.patrol2}}</a>
                </p>
                <p class="bubble">{{Kenny.goal2}}</p>
                <!--<p class="bubble">{{Kenny.goal2}}</p>-->
                <button class="btn btn-lg btn-success alert" onclick="doInspireMe()" id="inspire1">Inspire Me</button>
                <button class="btn btn-lg btn-info alert" id="progress1" onclick="window.location.href='trackprogress'">Track Progress</button>
            </div>
          {{/each }}

            </div>
          </p>
        </div>

        <!-- JENNY'S STUFF -->
        <div ng-show="tab.isSet(2)">
          <p>
            <h3>Soohyun's Goal</h3><br>

            <button class="btn btn-xs">
              <a href ng-click="tab.setTab(1)">&lt;- Back</a>
            </button>
            <div class="goal-container container">
          	 Show Soohyun's information
            </div>
          </p>
        </div>

        <!-- Mary's stuff -->
        <div ng-show="tab.isSet(3)">
          <p>
            <h3>Alexandra's Goal</h3><br>
            
            <button class="btn btn-xs">
              <a href ng-click="tab.setTab(1)">&lt;- Back</a>
            </button>
            <div class="goal-container container">
              Show Alexandra's information
            </div>
          </p>
        </div> 

      </section>  
    </div>

  </body>

</html>
